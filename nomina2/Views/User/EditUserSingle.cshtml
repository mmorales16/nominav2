@model nomina2.Models.DTO.UserDTO


@{
    ViewBag.Title = "EditUserSecurity";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h2>Update user    (solo administrador) </h2>
    <div>
        @using (Html.BeginForm("EditUserSingle", "User", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label>Name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Last Name:</label>
                @Html.TextBoxFor(model => model.Last_Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Telephone_number:</label>
                @Html.TextBoxFor(model => model.Telephone_number, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Departament:</label>
                @Html.DropDownListFor(model => model.Department_id, (SelectList)ViewBag.Departaments, "Select a Departament", new { @class = "form-control", @disabled = "disabled" })
            </div>



            <div class="form-group">
                <label>Role:</label>
                @Html.DropDownListFor(model => model.Role_id, (SelectList)ViewBag.Roles, "Select a role", new { @class = "form-control", @disabled = "disabled" })
            </div>


            <div class="form-group">
                <label>Type payment</label>
                @Html.TextBoxFor(model => model.Type_payment, new { @class = "form-control", @disabled = "disabled" })
            </div>

            <div class="form-group">
                <label>Amount_salary</label>
                @Html.TextBoxFor(model => model.Amount_salary, new { @class = "form-control", @disabled = "disabled" })
            </div>



    


            <br />
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </div>
</body>
</html>
