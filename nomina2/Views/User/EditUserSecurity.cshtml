@model nomina2.Models.DTO.UserDTO

@{
    ViewBag.Title = "Edit User";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit (solo administrador)</title>
</head>
<body>

    <h2>Update user </h2>
    <div>
        @using (Html.BeginForm("EditUserSecurity", "User", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label>Name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                <label>Last Name:</label>
                @Html.TextBoxFor(model => model.Last_Name, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>State:</label>
                @Html.DropDownListFor(model => model.State, new SelectList(new[]
                {
                    new SelectListItem { Text = "Active", Value = "Active" },
                    new SelectListItem { Text = "Inactive", Value = "Inactive" }
                }, "Value", "Text"), new { @class = "form-control" })
            </div>



            <br />
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </div>
</body>
</html>
